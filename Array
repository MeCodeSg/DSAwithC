                    // enter n digits & form number //
#include <stdio.h>
int main() {
    int n;
    int number=0;
    int digits[10];
    int i;
    int mul=1;
    printf("Enter the no. of digits: ");
    scanf("%d", &n);
    for(i=0; i<n; i++) {
        printf("\n Enter digit at pos %d: ", i+1);
        scanf("%d", &digits[i]);
    }
    i=0;
    while(i<n) {
        number+=digits[i]*mul;
        i++;
        mul*=10;
    }
    printf("%d", number);
    return 0;
}

                    // Find whether array contains duplicate or not //
#include <stdio.h>
int main() {
    int n, flag=0, arr[10], i, j;
    printf("Enter the length of array: ");
    scanf("%d", &n);
    for(i=0; i<n; i++) {
        printf("\n Enter element: ");
        scanf("%d", &arr[i]);
    }
    for(i=0; i<n; i++) {
        for(j=i+1; j<n; j++) {
            if(arr[i]==arr[j]) {
                flag=1;
                printf("\n Duplicates found at %d & %d", i, j);
                break;
            }
        }
    }
    if(flag==0) {
        printf("\n No duplicates found");
    }
    return 0;
}

                    // Insert a number at given location //
#include <stdio.h>
int main() {
    int n, arr[10], i, num, pos;
    printf("Enter the length of array: ");
    scanf("%d", &n);
    for(i=0; i<n; i++) {
        printf("\n Enter element: ");
        scanf("%d", &arr[i]);
    }
    printf("Enter the number to be inserted: ");
    scanf("%d", &num);
    printf("Enter the pos at which the num s to be inserted: ");
    scanf("%d", &pos);
    for(i=0; i<n; i++) {
        printf("%d   ", arr[i]);
    }
    printf("\n");
    
    for(i=n-1; i>=pos; i--) {
        arr[i+1]=arr[i];
    }
    arr[pos]=num;
    n+=1;
    for(i=0; i<n; i++) {
        printf("%d   ", arr[i]);
    }
    return 0;
}

                    // Insert a number in an ascending sorted array //
#include <stdio.h>
int main() {
    int n, arr[10], i, num, pos;
    printf("Enter the length of array: ");
    scanf("%d", &n);
    for(i=0; i<n; i++) {
        printf("\n Enter element: ");
        scanf("%d", &arr[i]);
    }
    printf("Enter the number to be inserted: ");
    scanf("%d", &num);
    
    for(i=0; i<n; i++) {
        printf("%d   ", arr[i]);
    }
    printf("\n");
    for(i=0; i<n; i++) {
        if(arr[i]>num) {
            pos=i;
            break;
        }
    }
    for(i=n-1; i>=pos; i--) {
        arr[i+1]=arr[i];
    }
    arr[pos]=num;
    n+=1;
    for(i=0; i<n; i++) {
        printf("%d   ", arr[i]);
    }
    return 0;
}

                    // delete from a given loc //
#include <stdio.h>
int main() {
    int n, arr[10], i, pos;
    printf("Enter the length of array: ");
    scanf("%d", &n);
    for(i=0; i<n; i++) {
        printf("\n Enter element: ");
        scanf("%d", &arr[i]);
    }
    printf("Enter the pos from which the num has to be delated: ");
    scanf("%d", &pos);
    for(i=0; i<n; i++) {
        printf("%d   ", arr[i]);
    }
    printf("\n");
    for(i=pos; i<n-1; i++) {
        arr[i]=arr[i+1];
    }
    n--;
    for(i=0; i<n; i++) {
        printf("%d   ", arr[i]);
    }
    return 0;
}

